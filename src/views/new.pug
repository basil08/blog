extends layout.pug

block scripts
  script(src='main.js')
  script(src='createnewpost.js')

block content
  h1 Create New Post
  form(id="newpostform", method="POST")
    div
      label(for="title") Title:
      div
        input(type="text", id="title", name="title")
    div
      label(for="author") Author:
      div
        input(type="text", id="author", name="author")
    div
      label(for="mdText") Text (Markdown supported!):
    //- input(type="textarea", name="mdText", id="mdText")
    textarea(name="mdText", rows=20, cols=50, id="mdText")
    div
      input(type="submit", value="Submit")

    a(href='/') Cancel